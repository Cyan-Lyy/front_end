{
	"pages": [ //pages数组中第一项表示应用启动页
		{
			"path": "pages/home/home",
			"style": {
				"navigationBarTitleText": "首页",
				"enablePullDownRefresh": true,
				"usingComponents": {
					"van-button": "/wxcomponents/vant/dist/button/index"
				}
			}
		},
		{
			"path": "pages/notification/notification",
			"style": {
				"navigationBarTitleText": "公告"
			}
		},
		{
			"path": "pages/order/order",
			"style": {
				"navigationBarTitleText": "订单",
				"usingComponents": {
					"van-dropdown-menu": "/wxcomponents/vant/dist/dropdown-menu/index",
					"van-dropdown-item": "/wxcomponents/vant/dist/dropdown-item/index"
				}
			}
		},
		{
			"path": "pages/mine/mine",
			"style": {
				"navigationBarTitleText": "我的",
				"enablePullDownRefresh": true
			}
		}
	],
	"easycom": {
			"autoscan": true,
			"custom": {
				"fui-(.*)": "firstui-uni/firstui/fui-$1/fui-$1.vue",
				"tui-(.*)": "thorui-uni/lib/thorui/tui-$1/tui-$1.vue"
			}
		},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarBackgroundColor": "#87CEFA",
		"backgroundColor": "#CECECE",
		"usingComponents": {
			"van-button": "/wxcomponents/vant/dist/button/index",
			"van-progress": "/wxcomponents/vant/dist/progress/index"
		}
	},
	"uniIdRouter": {},
	"tabBar": {
		"selectedColor": "#87CEFA",
		"list": [{
				"pagePath": "pages/home/home",
				"text": "首页",
				"iconPath": "static/tabBar_icons/home.png",
				"selectedIconPath": "static/tabBar_icons/home_selected.png"
			},
			{
				"pagePath": "pages/notification/notification",
				"text": "公告",
				"iconPath": "static/tabBar_icons/notification.png",
				"selectedIconPath": "static/tabBar_icons/notification_selected.png"
			},
			{
				"pagePath": "pages/order/order",
				"text": "订单",
				"iconPath": "static/tabBar_icons/order.png",
				"selectedIconPath": "static/tabBar_icons/order_selected.png"
			},
			{
				"pagePath": "pages/mine/mine",
				"text": "我的",
				"iconPath": "static/tabBar_icons/mine.png",
				"selectedIconPath": "static/tabBar_icons/mine_selected.png"
			}
		]
	}
}
